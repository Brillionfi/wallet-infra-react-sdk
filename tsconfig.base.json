{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "jest"],
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "declarationDir": "./dist",
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.css"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
